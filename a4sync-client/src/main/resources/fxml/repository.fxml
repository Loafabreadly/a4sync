<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.a4sync.client.controller.RepositoryController"
      spacing="10" styleClass="repository-view">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Repositories" styleClass="section-header"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="addRepositoryButton" text="Add Repository" onAction="#onAddRepository"/>
    </HBox>

    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox fx:id="repositoryList" spacing="10" styleClass="repository-list">
            <!-- Repository entries will be added here dynamically -->
        </VBox>
    </ScrollPane>

    <stylesheets>
        <URL value="@/styles/repository.css"/>
    </stylesheets>
</VBox>