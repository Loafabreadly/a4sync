<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.a4sync.client.controller.MainController"
      spacing="10" 
      stylesheets="@../styles/main.css">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <MenuBar>
        <Menu text="File">
            <MenuItem text="Settings" onAction="#showSettings"/>
            <SeparatorMenuItem/>
            <MenuItem text="Exit" onAction="#exit"/>
        </Menu>
        <Menu text="Help">
            <MenuItem text="About" onAction="#showAboutDialog"/>
        </Menu>
    </MenuBar>

    <TabPane fx:id="mainTabPane" VBox.vgrow="ALWAYS">
        <Tab text="Mod Sets" closable="false">
            <VBox spacing="10">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Repository:"/>
                    <ComboBox fx:id="repositoryComboBox" promptText="Select repository..."/>
                    <Button text="Test Connection" onAction="#testSelectedRepository"/>
                </HBox>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Mod Directories:"/>
                    <TextField fx:id="searchDirectoryField" HBox.hgrow="ALWAYS" 
                             promptText="Add mod directory path..."/>
                    <Button text="Browse" onAction="#addSearchDirectory"/>
                </HBox>

                <SplitPane VBox.vgrow="ALWAYS">
                    <VBox spacing="5">
                        <HBox spacing="5" alignment="CENTER_LEFT">
                            <Button text="Create Set" onAction="#createModSet"/>
                            <Button text="Delete Set" onAction="#deleteModSet"/>
                        </HBox>
                        <ListView fx:id="modSetList" VBox.vgrow="ALWAYS"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Mod Set Details"/>
                        <GridPane vgap="5" hgap="5">
                            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <TextField fx:id="modSetName" GridPane.rowIndex="0" 
                                     GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>
                            
                            <Label text="Profile:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <TextField fx:id="profileName" GridPane.rowIndex="1" 
                                     GridPane.columnIndex="1"/>
                            
                            <Label text="Game:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <ComboBox fx:id="gameTypeComboBox" GridPane.rowIndex="2" 
                                     GridPane.columnIndex="1"/>
                            
                            <CheckBox fx:id="noSplashCheck" text="No Splash" 
                                    GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        </GridPane>
                        
                        <Label text="Mods"/>
                        <ListView fx:id="modList" VBox.vgrow="ALWAYS"/>
                        
                        <HBox spacing="5" alignment="CENTER_RIGHT">
                            <Button text="Update Mods" onAction="#updateMods"/>
                            <Button text="Launch Game" onAction="#launchGame"/>
                        </HBox>
                    </VBox>
                </SplitPane>
            </VBox>
        </Tab>
        

        

        
        <Tab text="Repository Management" closable="false">
            <VBox spacing="10">
                <!-- Repository Management Header -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Repository Management" styleClass="section-header"/>
                    <Button text="Add Repository" onAction="#addRepository"/>
                    <Button text="Refresh All" onAction="#refreshAllRepositories"/>
                    <Button text="Test All Connections" onAction="#testAllRepositories"/>
                </HBox>
                
                <!-- Main Split Pane: Repository List | Details + Actions -->
                <SplitPane VBox.vgrow="ALWAYS" dividerPositions="0.6">
                    <!-- Left Side: Repository Table -->
                    <VBox spacing="10">
                        <Label text="Repositories" styleClass="section-header"/>
                        
                        <TableView fx:id="repositoryStatusTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="repoNameColumn" text="Repository" prefWidth="120"/>
                                <TableColumn fx:id="repoUrlColumn" text="URL" prefWidth="200"/>
                                <TableColumn fx:id="repoStatusColumn" text="Status" prefWidth="80"/>
                                <TableColumn fx:id="repoModCountColumn" text="Mods" prefWidth="60"/>
                                <TableColumn fx:id="repoModSetCountColumn" text="Mod Sets" prefWidth="80"/>
                                <TableColumn fx:id="repoSizeColumn" text="Total Size" prefWidth="100"/>
                                <TableColumn fx:id="repoLastUpdatedColumn" text="Last Updated" prefWidth="120"/>
                            </columns>
                        </TableView>
                    </VBox>
                    
                    <!-- Right Side: Repository Details and Actions -->
                    <VBox spacing="10">
                        <!-- Repository Connection Editor -->
                        <VBox spacing="10" styleClass="connection-editor">
                            <Label text="Repository Connection" styleClass="section-header"/>
                            
                            <GridPane hgap="10" vgap="5">
                                <columnConstraints>
                                    <ColumnConstraints minWidth="80" prefWidth="80"/>
                                    <ColumnConstraints hgrow="ALWAYS"/>
                                </columnConstraints>
                                
                                <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                <TextField fx:id="repoEditNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                                
                                <Label text="URL:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                <TextField fx:id="repoEditUrlField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                
                                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                <PasswordField fx:id="repoEditPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                
                                <CheckBox fx:id="repoEditEnabledCheck" text="Enabled" 
                                         GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                            </GridPane>
                            
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Button text="Save Changes" onAction="#saveRepositoryChanges"/>
                                <Button text="Test Connection" onAction="#testSelectedRepositoryFromStatus"/>
                                <Button text="Delete Repository" onAction="#deleteSelectedRepository"/>
                            </HBox>
                        </VBox>
                        
                        <!-- Available Mods from Selected Repository -->
                        <VBox spacing="5" VBox.vgrow="ALWAYS">
                            <Label text="Available Mod Sets" styleClass="section-header"/>
                            
                            <TableView fx:id="availableModsTable" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="modNameColumn" text="Mod Set Name" prefWidth="150"/>
                                    <TableColumn fx:id="modVersionColumn" text="Version" prefWidth="80"/>
                                    <TableColumn fx:id="modSizeColumn" text="Type" prefWidth="80"/>
                                    <TableColumn fx:id="modStatusColumn" text="Action" prefWidth="80"/>
                                </columns>
                            </TableView>
                            
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Button text="Connect to Repository" onAction="#connectToRepository"/>
                                <Button text="View Mod Sets" onAction="#viewSelectedRepositoryModSets"/>
                                <Button text="Open in Browser" onAction="#openSelectedRepositoryInBrowser"/>
                            </HBox>
                        </VBox>
                        
                        <!-- Update Management Section -->
                        <VBox spacing="5">
                            <Label text="Update Management" styleClass="section-header"/>
                            
                            <TableView fx:id="updatesTable" maxHeight="150">
                                <columns>
                                    <TableColumn fx:id="updateModSetColumn" text="Mod Set" prefWidth="120"/>
                                    <TableColumn fx:id="updateRepositoryColumn" text="Repository" prefWidth="100"/>
                                    <TableColumn fx:id="updateCurrentVersionColumn" text="Current" prefWidth="80"/>
                                    <TableColumn fx:id="updateNewVersionColumn" text="Available" prefWidth="80"/>
                                </columns>
                            </TableView>
                            
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Button text="Refresh Updates" onAction="#refreshUpdates"/>
                                <Button text="Update Selected" onAction="#updateSelectedModSets"/>
                                <Button text="Update All" onAction="#updateAllModSets"/>
                            </HBox>
                        </VBox>
                        
                        <!-- Progress and Status -->
                        <VBox spacing="5">
                            <ProgressBar fx:id="downloadProgress" progress="0.0" maxWidth="Infinity"/>
                            <Label fx:id="statusLabel"/>
                        </VBox>
                    </VBox>
                </SplitPane>
            </VBox>
        </Tab>
    </TabPane>
</VBox>
